    <div class = "messages">
      <div class = "message_info">
        <div class = "info_name">
          <%= message.user.name%>
        </div>
        <div class = "info_date">
          <%=  l message.created_at%>
        </div>
      </div>
      <div class = "message_text">
        <div class = "text_post">
          <%= message.content%>
        </div>
        <%= image_tag message.image.variant(resize:'500x500'), class: 'message-image' if message.image.attached? %>
      </div>
    </div>
