
  <div class = "side_top">
    <div class = "user_name">
      <%= link_to edit_user_path(current_user) do %>
        <%= current_user.name %>
        <% end %>
    </div>

    <div class = "create_chat">
      <%= link_to "チャットを作成する", new_room_path %>
    </div>
  </div>

  <div class = "side_bottom">
    <% current_user.rooms.each do |room|%>
      <div class = "room">
        <div class = "room_name">
          <a href="#"><%= room.name%></a>
        </div>
      </div>
    <% end %>
  </div>

